<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/card_view"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            app:cardElevation="7dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">
                <!-- Trail Owner Label -->

                <!-- User Icon-->
                <TextView
                    android:id="@+id/card_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="toddteller"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/card_trail_image"
                    app:layout_constraintTop_toBottomOf="@id/card_trail_image"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_account_20"
                    app:layout_constraintTop_toTopOf="@id/card_owner_name"
                    app:layout_constraintEnd_toStartOf="@id/card_owner_name"
                    app:layout_constraintTop_toBottomOf="@id/card_trail_image"
                    tools:ignore="ContentDescription" />

                <!-- Trail Label -->
                <TextView
                    android:id="@+id/card_trail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Sentiero degli dei"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/card_trail_image"
                    app:layout_constraintTop_toBottomOf="@id/card_trail_image"
                    tools:ignore="HardcodedText" />

                <!-- Country Label -->
                <TextView
                    android:id="@+id/card_country_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Italia, Europa"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@id/card_trail_name"
                    app:layout_constraintTop_toBottomOf="@+id/card_trail_name"
                    tools:ignore="HardcodedText" />

                <!-- Card Image -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_trail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/trail_image"
                        android:layout_width="350dp"
                        android:layout_height="350dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/card_cover"
                        android:src="@drawable/trail_test_image"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>