<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <ImageView
        android:layout_marginHorizontal="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:src="@drawable/error_hiking"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        >

        <TextView
            android:id="@+id/error_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Server error"
            android:textStyle="bold"
            android:textColor="#E83C3C"/>

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="Your photo could not upload ErrorMessages.CONNECTION_ERROR ErrorMessages.CONNECTION_ERROR ErrorMessages.CONNECTION_ERROR  ErrorMessages.CONNECTION_ERROR ErrorMessages.CONNECTION_ERROR"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/close_button"
        android:background="?android:selectableItemBackground"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_alpha"
        tools:ignore="ContentDescription" />

</LinearLayout>