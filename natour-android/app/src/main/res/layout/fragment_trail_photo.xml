<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.fragments.TrailPhotoFragment"
    >

    <data>
        <variable
            name="trailDetailsViewModel"
            type="com.example.natour.ui.home.viewmodels.TrailDetailsViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/shape_round"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginHorizontal="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_image_card"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:textSize="25sp"
                tools:text="bonek"
                android:text="@{trailDetailsViewModel.trailPhotoClicked.owner.username}"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@{trailDetailsViewModel.trailPhotoClicked.image}"
            tools:ignore="ContentDescription" />

    </FrameLayout>

</layout>
